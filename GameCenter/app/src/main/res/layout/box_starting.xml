<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/box_starting">

    <TextView
        android:id="@+id/boxTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="65dp"
        android:textSize="6pt"
        android:textStyle="bold"
        android:textColor="#000000"
        android:text="@string/boxStarting" />

    <Button
        android:id="@+id/newBoxGame"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/boxTitle"
        android:text="New Game"
        android:textStyle="bold" />

    <Button
        android:id="@+id/loadBoxGame"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newBoxGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Save/Load"
        android:textStyle="bold" />

    <Button
        android:id="@+id/boxScoreboard"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/loadBoxGame"
        android:text="Scoreboard"
        android:textStyle="bold" />

</RelativeLayout>